<Window x:Class="Envelope_printing.PrintProgressWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="Print" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner"
 ResizeMode="NoResize" ShowInTaskbar="False" Topmost="False" Background="#FFF7F7F7">
 <Border Padding="16" CornerRadius="8" Background="#FFFFFFFF" BorderBrush="#D0D6DE" BorderThickness="1">
 <Grid>
 <Grid.ColumnDefinitions>
 <ColumnDefinition Width="*"/>
 <ColumnDefinition Width="Auto"/>
 </Grid.ColumnDefinitions>
 <StackPanel>
 <TextBlock Text="Sending to printer..." FontWeight="SemiBold" Margin="0,0,0,6"/>
 <ProgressBar Height="8" Width="340" IsIndeterminate="True"/>
 <TextBlock Margin="0,8,0,0" FontSize="12" Foreground="Gray" Text="{Binding PrintStatus}"/>
 </StackPanel>
 <Button Grid.Column="1" Content="Cancel" Width="90" Height="28" Margin="16,0,0,0" Click="Cancel_Click"/>
 </Grid>
 </Border>
</Window>