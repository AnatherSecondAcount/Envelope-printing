<Application x:Class="Envelope_printing.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Envelope_printing"
             xmlns:designer="clr-namespace:Envelope_printing.Designer"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/MinimalisticStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type local:HomeViewModel}">
                <local:HomeView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type local:RecipientEditorViewModel}">
                <local:RecipientEditorView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type local:TemplateDesignerViewModel}">
                <designer:TemplateDesignerView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type local:PrintPreviewViewModel}">
                <local:PrintPreviewView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>