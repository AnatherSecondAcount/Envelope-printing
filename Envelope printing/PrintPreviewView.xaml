<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="Envelope_printing.PrintPreviewView"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:local="clr-namespace:Envelope_printing"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              mc:Ignorable="d"
              d:DesignHeight="600" d:DesignWidth="1100"
              Background="{StaticResource AppBackground}"
              UseLayoutRounding="True" SnapsToDevicePixels="True">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <Thickness x:Key="FieldSpacing">0,8,0,0</Thickness>
        <Style x:Key="LabeledRowGrid" TargetType="Grid">
            <Setter Property="Margin" Value="6,8,6,0"/>
        </Style>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,14,0,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <!-- Fallback local style to avoid missing resource at runtime -->
        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}"/>
    </UserControl.Resources>

    <!-- Main3-area layout: left settings, right-top preview (fit), right-bottom filters & update panel -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: printer/template settings and print action -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Padding="10">
            <StackPanel>
                <TextBlock Text="Печать конвертов" Style="{StaticResource HeaderTextBlock}"/>

                <TextBlock Text="Шаблон" Style="{StaticResource SectionHeader}"/>
                <ComboBox Margin="6,0,6,0" ItemsSource="{Binding Templates}" SelectedItem="{Binding SelectedTemplate}" DisplayMemberPath="Name"/>

                <TextBlock Text="Принтер" Style="{StaticResource SectionHeader}"/>
                <Grid Margin="6,0,6,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox Grid.Column="0" ItemsSource="{Binding Printers}" SelectedItem="{Binding SelectedPrinter}" DisplayMemberPath="Name"/>
                    <Button Grid.Column="1" Style="{StaticResource FileButtonStyle}" Width="36" Height="32" Margin="8,0,0,0" ToolTip="Параметры принтера…" Click="OpenPrinterSettings_Click">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                </Grid>

                <Grid Style="{StaticResource LabeledRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Формат"/>
                    <ComboBox Grid.Column="1" ItemsSource="{Binding AvailablePageSizes}" SelectedItem="{Binding SelectedPageSize}" DisplayMemberPath="Display" Margin="5,0,0,0"/>
                </Grid>

                <Grid Style="{StaticResource LabeledRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Ориентация (лист)"/>
                    <WrapPanel Grid.Column="1" ItemWidth="100" Margin="5,0,0,0">
                        <RadioButton Content="Книжная" IsChecked="{Binding IsPrinterLandscape, Converter={StaticResource InverseBooleanConverter}}"/>
                        <RadioButton Content="Альбомная" IsChecked="{Binding IsPrinterLandscape}"/>
                    </WrapPanel>
                </Grid>

                <Grid Style="{StaticResource LabeledRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Копий"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0">
                        <Button Content="-" Style="{StaticResource SmallSquareButtonStyle}" Command="{Binding DecreaseCopiesCommand}"/>
                        <TextBox Style="{StaticResource SmallNumericTextBoxStyle}" Margin="6,0" HorizontalContentAlignment="Center" Text="{Binding Copies, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button Content="+" Style="{StaticResource SmallSquareButtonStyle}" Command="{Binding IncreaseCopiesCommand}"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Диапазон печати" Style="{StaticResource SectionHeader}"/>
                <StackPanel Margin="6,0,6,0">
                    <RadioButton Content="Все" IsChecked="{Binding IsRangeAll}"/>
                    <RadioButton Content="Текущая" IsChecked="{Binding IsRangeCurrent}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <RadioButton Content="Произвольный" IsChecked="{Binding IsRangeCustom}" Margin="0,5,0,5" Height="20" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" IsEnabled="{Binding IsRangeCustomEnabled}" Text="{Binding RangeExpression, UpdateSourceTrigger=PropertyChanged}" ToolTip="Например:1-3,5,8-10" Margin="8,0,0,0"/>
                    </Grid>
                </StackPanel>

                <TextBlock Text="Расположение конверта" Style="{StaticResource SectionHeader}"/>
                <CheckBox Margin="6,0,6,0" Content="Вписать в печатную область" IsChecked="{Binding FitToImageableArea}"/>
                <Grid Style="{StaticResource LabeledRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Масштаб (%)"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="5,0,0,0">
                        <TextBox Width="60" Text="{Binding TemplateScalePercent}" IsEnabled="{Binding FitToImageableArea, Converter={StaticResource InverseBooleanConverter}}"/>
                    </StackPanel>
                </Grid>
                <Grid Style="{StaticResource LabeledRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Смещение X (мм)"/>
                    <TextBox Grid.Column="1" Text="{Binding TemplateOffsetXMm, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
                <Grid Style="{StaticResource LabeledRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Смещение Y (мм)"/>
                    <TextBox Grid.Column="1" Text="{Binding TemplateOffsetYMm, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>

                <TextBlock Text="Размеры шаблона" Style="{StaticResource SectionHeader}"/>
                <Grid Style="{StaticResource LabeledRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Ширина (мм)"/>
                    <TextBlock Grid.Column="1" Text="{Binding EnvelopeWidthMm}"/>
                </Grid>
                <Grid Style="{StaticResource LabeledRowGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Высота (мм)"/>
                    <TextBlock Grid.Column="1" Text="{Binding EnvelopeHeightMm}"/>
                </Grid>

                <Button Content="Печать" Style="{StaticResource ActionButtonStyle}" Height="40" Margin="0,12,0,0" Click="Print_Click" HorizontalAlignment="Stretch"/>

                <!-- Update panel below settings -->
                <TextBlock Text="Обновления" Style="{StaticResource SectionHeader}"/>
                <local:UpdatePanel />
            </StackPanel>
        </ScrollViewer>

        <!-- Right side -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Preview area with overlay pager and inner padding -->
            <Border Grid.Row="0" Margin="10" Padding="12" Style="{StaticResource PanelBorder}" BorderThickness="1" Background="#E5E5E5">
                <Grid>
                    <Viewbox Stretch="Uniform" StretchDirection="Both">
                        <local:PrintPreviewCanvas DataContext="{Binding}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    </Viewbox>
                    <!-- Pager overlay centered bottom; hidden when range is current -->
                    <Border VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,10" Padding="6" Style="{StaticResource OverlayPanelBorder}"
                            Visibility="{Binding IsRangeCurrent, Converter={StaticResource InverseBooleanConverter}}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Button Content="←" Command="{Binding PrevPageCommand}" MinWidth="44"/>
                            <TextBlock Text="{Binding CurrentPageDisplay}" Margin="8,0" VerticalAlignment="Center"/>
                            <Button Content="→" Command="{Binding NextPageCommand}" MinWidth="44"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Filters area compact: fixed width, left aligned -->
            <Border Grid.Row="1" Padding="10" HorizontalAlignment="Left" Margin="10,0,0,10" Width="460">
                <StackPanel>
                    <TextBlock Text="Фильтр печати" Style="{StaticResource HeaderTextBlock}"/>
                    <Grid Margin="0,6,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Город" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding AvailableCities}" SelectedItem="{Binding SelectedCity}"/>
                    </Grid>
                    <TextBlock Text="Поиск" Style="{StaticResource SectionHeader}"/>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>