<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="Envelope_printing.PrintPreviewCanvas"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 UseLayoutRounding="True" SnapsToDevicePixels="True"
 Background="#E5E5E5">
 <Grid RenderOptions.BitmapScalingMode="HighQuality">
 <!-- Page (white) -->
 <Border x:Name="PrinterSheet" Background="White" BorderBrush="#DDD" BorderThickness="1" CacheMode="BitmapCache">
 <Grid>
 <!-- Imageable area container (no border, just subtle backdrop) -->
 <Border x:Name="ImageableRect" BorderThickness="0" Background="#08000000" HorizontalAlignment="Left" VerticalAlignment="Top" Panel.ZIndex="0"/>

 <!-- Content canvas (clipped to true imageable area by code) -->
 <Canvas x:Name="PreviewCanvas" Panel.ZIndex="1"/>

 <!-- Per-side outline canvas for envelope (lines), clipped to imageable area -->
 <Canvas x:Name="EnvelopeOutlineCanvas" Panel.ZIndex="2"/>

 <!-- Legacy outline (hidden) -->
 <Border x:Name="EnvelopeOutlineRect" Visibility="Collapsed" BorderThickness="0" BorderBrush="#00FFFFFF" Background="#00FFFFFF" HorizontalAlignment="Left" VerticalAlignment="Top" Panel.ZIndex="2"/>

 <!-- Overlay content that is not touched by renderer -->
 <ContentPresenter x:Name="OverlayPresenter" Panel.ZIndex="3"
 Content="{Binding OverlayContent, RelativeSource={RelativeSource AncestorType=UserControl}}"
 IsHitTestVisible="False"/>
 </Grid>
 </Border>
 </Grid>
</UserControl>