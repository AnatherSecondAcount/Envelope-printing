<Window x:Class="Envelope_printing.MainWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="Печать конвертов" Height="600" Width="900" Background="{DynamicResource AppBackground}" WindowStartupLocation="CenterScreen" MinWidth="900" MinHeight="600">
 <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <!-- Indicator style: small rounded pill at left, uses AccentBrush -->
        <Style x:Key="NavActiveIndicatorStyle" TargetType="Border">
            <Setter Property="Width" Value="5"/>
            <Setter Property="Height" Value="23"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Opacity" Value="0"/>
        </Style>
        <!-- Иконки: смещаем немного влево в обоих состояниях -->
        <Style x:Key="NavIconStyle" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <!-- Foreground берём из базового стиля TextBlock через BasedOn (динамический ресурс),
 поэтому цвет иконок будет меняться вместе с темой -->
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsLeftPanelExpanded}" Value="False">
                    <Setter Property="Margin" Value="10,0,0,0"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <!-- Текст: плавная анимация появления/исчезновения вместо Visibility -->
        <Style x:Key="NavTextStyle" TargetType="TextBlock" BasedOn="{StaticResource NavButtonTextStyle}">
            <Setter Property="Opacity" Value="1"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsLeftPanelExpanded}" Value="False">
                    <Setter Property="IsHitTestVisible" Value="False"/>
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15" FillBehavior="HoldEnd"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsLeftPanelExpanded}" Value="True">
                    <Setter Property="IsHitTestVisible" Value="True"/>
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.15" FillBehavior="HoldEnd"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Background="{DynamicResource AppBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding LeftPanelWidth}"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Левая панель навигации -->
        <Border Grid.Column="0" Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource FieldBorderBrush}" BorderThickness="1" Margin="6,6,4,6" CornerRadius="4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- верхние кнопки -->
                    <RowDefinition Height="*"/>
                    <!-- центр / прокладка -->
                    <RowDefinition Height="Auto"/>
                    <!-- нижние кнопки -->
                </Grid.RowDefinitions>
                <!-- Верхняя группа -->
                <StackPanel Grid.Row="0" Margin="4,6,4,4">
                    <Button Style="{StaticResource HomeNavButtonStyle}" Command="{Binding ShowHomeCommand}" ToolTip="На главную">
                        <Grid Height="34">
                            <!-- pill indicator -->
                            <Border>
                                <Border.Style>
                                    <Style BasedOn="{StaticResource NavActiveIndicatorStyle}" TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentSection}" Value="Home">
                                                <Setter Property="Opacity" Value="1"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" FontFamily="Segoe MDL2 Assets" Text="&#xE80F;" Style="{StaticResource NavIconStyle}"/>
                                <TextBlock Grid.Column="1" Text="На главную" Style="{StaticResource NavTextStyle}"/>
                            </Grid>
                        </Grid>
                    </Button>
                    <Button Style="{StaticResource PrintNavButtonStyle}" Command="{Binding ShowPrintPreviewCommand}" ToolTip="Печать конвертов">
                        <Grid Height="34">
                            <!-- pill indicator -->
                            <Border>
                                <Border.Style>
                                    <Style BasedOn="{StaticResource NavActiveIndicatorStyle}" TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentSection}" Value="Print">
                                                <Setter Property="Opacity" Value="1"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" FontFamily="Segoe MDL2 Assets" Text="&#xE715;" Style="{StaticResource NavIconStyle}"/>
                                <TextBlock Grid.Column="1" Text="Печать конвертов" Style="{StaticResource NavTextStyle}"/>
                            </Grid>
                        </Grid>
                    </Button>
                </StackPanel>
                <!-- Нижняя группа -->
                <StackPanel Grid.Row="2" Margin="4" VerticalAlignment="Bottom">
                    <Button Style="{StaticResource RecipientsNavButtonStyle}" Command="{Binding ShowRecipientEditorCommand}" ToolTip="База получателей">
                        <!-- Added accent stripe -->
                        <Grid Height="34">
                            <!-- pill indicator -->
                            <Border>
                                <Border.Style>
                                    <Style BasedOn="{StaticResource NavActiveIndicatorStyle}" TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentSection}" Value="Recipients">
                                                <Setter Property="Opacity" Value="1"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" FontFamily="Segoe MDL2 Assets" Text="&#xE716;" Style="{StaticResource NavIconStyle}"/>
                                <TextBlock Grid.Column="1" Text="База получателей" Style="{StaticResource NavTextStyle}"/>
                            </Grid>
                        </Grid>
                    </Button>
                    <Button Style="{StaticResource DesignerNavButtonStyle}" Command="{Binding ShowTemplateDesignerCommand}" ToolTip="Дизайнер">
                        <!-- Added accent stripe -->
                        <Grid Height="34">
                            <!-- pill indicator -->
                            <Border>
                                <Border.Style>
                                    <Style BasedOn="{StaticResource NavActiveIndicatorStyle}" TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentSection}" Value="Designer">
                                                <Setter Property="Opacity" Value="1"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" FontFamily="Segoe MDL2 Assets" Text="&#xE70F;" Style="{StaticResource NavIconStyle}"/>
                                <TextBlock Grid.Column="1" Text="Дизайнер" Style="{StaticResource NavTextStyle}"/>
                            </Grid>
                        </Grid>
                    </Button>
                    <Button Style="{StaticResource SettingsNavButtonStyle}" Command="{Binding ShowSettingsCommand}" ToolTip="Настройки">
                        <!-- Added accent stripe -->
                        <Grid Height="34">
                            <!-- pill indicator -->
                            <Border>
                                <Border.Style>
                                    <Style BasedOn="{StaticResource NavActiveIndicatorStyle}" TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentSection}" Value="Settings">
                                                <Setter Property="Opacity" Value="1"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" FontFamily="Segoe MDL2 Assets" Text="&#xE713;" Style="{StaticResource NavIconStyle}"/>
                                <TextBlock Grid.Column="1" Text="Настройки" Style="{StaticResource NavTextStyle}"/>
                            </Grid>
                        </Grid>
                    </Button>
                    <Separator Margin="4"/>
                    <ToggleButton Style="{StaticResource NavToggleButtonStyle}" IsChecked="{Binding IsLeftPanelExpanded, Mode=TwoWay}" ToolTip="Свернуть / Развернуть">
                        <Grid Height="34">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" FontFamily="Segoe MDL2 Assets" Text="&#xE700;" Style="{StaticResource NavIconStyle}"/>
                            <TextBlock Grid.Column="1" Text="Свернуть" Style="{StaticResource NavTextStyle}"/>
                        </Grid>
                    </ToggleButton>
                </StackPanel>
            </Grid>
        </Border>
        <!-- Контент -->
        <Border Grid.Column="1" Margin="0,6,6,6" CornerRadius="4" Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource FieldBorderBrush}" BorderThickness="1">
            <ContentControl Content="{Binding CurrentView}" Margin="5"/>
        </Border>
    </Grid>
</Window>