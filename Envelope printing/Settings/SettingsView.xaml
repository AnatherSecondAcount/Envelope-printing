<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="Envelope_printing.SettingsView"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:local="clr-namespace:Envelope_printing"
 mc:Ignorable="d"
 d:DesignHeight="500" d:DesignWidth="900">
 <ScrollViewer VerticalScrollBarVisibility="Auto">
 <StackPanel Margin="16">
 <TextBlock Text="Настройки" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,12"/>

 <!-- Theme selector panel full width -->
 <Border Style="{StaticResource PanelBorder}" Padding="12" Margin="0,0,0,12">
 <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
 <TextBlock Text="Тема оформления" Style="{StaticResource SectionHeader}"/>
 <ComboBox Width="240" Style="{StaticResource FormComboBox}" ItemsSource="{Binding ThemeOptions}" SelectedValuePath="Value" SelectedValue="{Binding ThemePreference, Mode=TwoWay}">
 <ComboBox.ItemTemplate>
 <DataTemplate>
 <TextBlock Text="{Binding Display}"/>
 </DataTemplate>
 </ComboBox.ItemTemplate>
 </ComboBox>
 </StackPanel>
 </Border>

 <!-- Backup/Restore panel full width -->
 <Border Style="{StaticResource PanelBorder}" Padding="12" Margin="0,0,0,12">
 <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
 <TextBlock Text="Резервная копия" Style="{StaticResource SectionHeader}"/>
 <TextBlock Text="{Binding LastBackupDisplay}" Foreground="Gray" Margin="0,0,0,6"/>
 <WrapPanel Margin="0,4,0,0">
 <Button Content="Создать копию" Style="{StaticResource ActionButtonStyle}" Margin="0,0,8,0" Command="{Binding BackupCommand}"/>
 <Button Content="Восстановить" Style="{StaticResource ActionButtonStyle}" Command="{Binding RestoreCommand}"/>
 </WrapPanel>
 </StackPanel>
 </Border>

 <!-- Updates panel full width -->
 <Border Style="{StaticResource PanelBorder}" Padding="12" Margin="0,0,0,12">
 <local:UpdatePanel x:Name="Updates" />
 </Border>
 </StackPanel>
 </ScrollViewer>
</UserControl>