<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
 <!-- Subtle dark theme tuned for readability -->
 <!-- App/page backgrounds -->
 <SolidColorBrush x:Key="AppBackground" Color="#0F141A"/>
 <!-- Main surface (cards/panels) -->
 <SolidColorBrush x:Key="SurfaceBrush" Color="#1B222B"/>
 <!-- Secondary surface for light section separation (e.g., filters) -->
 <SolidColorBrush x:Key="SurfaceAltBrush" Color="#202833"/>
 <!-- Floating overlays (popups/toolbars) -->
 <SolidColorBrush x:Key="OverlayBackgroundBrush" Color="#232C38"/>
 <SolidColorBrush x:Key="OverlayBorderBrush" Color="#2E3A48"/>
 <!-- Inputs -->
 <SolidColorBrush x:Key="FieldBackgroundBrush" Color="#1E252F"/>
 <SolidColorBrush x:Key="FieldBorderBrush" Color="#334153"/>
 <!-- Text / accent -->
 <SolidColorBrush x:Key="TextPrimaryBrush" Color="#E6EAF0"/>
 <SolidColorBrush x:Key="AccentBrush" Color="#4AA3FF"/>
 <!-- Buttons states -->
 <SolidColorBrush x:Key="ButtonHoverBrush" Color="#273142"/>
 <SolidColorBrush x:Key="ButtonPressedBrush" Color="#2C3650"/>
 <SolidColorBrush x:Key="ButtonHoverBorderBrush" Color="#3D4B61"/>
 <SolidColorBrush x:Key="ButtonPressedBorderBrush" Color="#465571"/>
 <!-- Preview area background/border for area hint -->
 <SolidColorBrush x:Key="PreviewBackdropBrush" Color="#27303B"/>
 <SolidColorBrush x:Key="PreviewBorderBrush" Color="#3A4658"/>
 <!-- Info banner -->
 <SolidColorBrush x:Key="InfoBannerBackgroundBrush" Color="#2E2A1B"/>
 <SolidColorBrush x:Key="InfoBannerBorderBrush" Color="#6B5E2D"/>
</ResourceDictionary>