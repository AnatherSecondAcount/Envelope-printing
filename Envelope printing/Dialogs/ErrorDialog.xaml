<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="Envelope_printing.ErrorDialog"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="Application Error" Height="420" Width="700"
 WindowStartupLocation="CenterOwner"
 ResizeMode="CanResizeWithGrip"
 Background="{DynamicResource SurfaceBrush}">
 <Window.Resources>
 <Style TargetType="TextBlock">
 <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
 </Style>
 </Window.Resources>
 <Grid Margin="10">
 <Grid.RowDefinitions>
 <RowDefinition Height="Auto"/>
 <RowDefinition Height="*"/>
 <RowDefinition Height="Auto"/>
 </Grid.RowDefinitions>
 <TextBlock Text="An unexpected error occurred." FontSize="16" FontWeight="SemiBold"/>
 <Border Grid.Row="1" Margin="0,8,0,8" Padding="8" BorderBrush="{DynamicResource FieldBorderBrush}" BorderThickness="1" Background="{DynamicResource SurfaceAltBrush}" CornerRadius="6">
 <ScrollViewer VerticalScrollBarVisibility="Auto">
 <TextBox x:Name="DetailsBox" IsReadOnly="True" TextWrapping="Wrap" Background="Transparent" BorderThickness="0" Foreground="{DynamicResource TextPrimaryBrush}"/>
 </ScrollViewer>
 </Border>
 <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
 <TextBlock x:Name="LogPathText" VerticalAlignment="Center" Opacity="0.8" Margin="0,0,8,0"/>
 <Button Content="Copy" Width="110" Click="Copy_Click"/>
 <Button Content="Open log" Width="110" Click="OpenLog_Click" Margin="6,0,0,0"/>
 <Button Content="Close app" Width="160" IsDefault="True" Click="Close_Click" Margin="6,0,0,0"/>
 </StackPanel>
 </Grid>
</Window>